<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>MyFirstServlet</display-name>

    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>ru.innopolis.stc9.servlet1.controller.HelloController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>marks</servlet-name>
        <servlet-class>ru.innopolis.stc9.servlet1.controller.MarksController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>marks</servlet-name>
        <url-pattern>/marks</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>ru.innopolis.stc9.servlet1.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DashboardController</servlet-name>
        <servlet-class>ru.innopolis.stc9.servlet1.controller.DashboardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardController</servlet-name>
        <url-pattern>/user/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InnerDashboardController</servlet-name>
        <servlet-class>ru.innopolis.stc9.servlet1.controller.UniversalDashboardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InnerDashboardController</servlet-name>
        <url-pattern>/inner/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminDashboardController</servlet-name>
        <servlet-class>ru.innopolis.stc9.servlet1.controller.AdminDashboardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardController</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>user-filter</filter-name>
        <filter-class>ru.innopolis.stc9.servlet1.controller.filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>user-filter</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>admin-filter</filter-name>
        <filter-class>ru.innopolis.stc9.servlet1.controller.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>admin-filter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>inner-filter</filter-name>
        <filter-class>ru.innopolis.stc9.servlet1.controller.filter.InnerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>inner-filter</filter-name>
        <url-pattern>/inner/*</url-pattern>
    </filter-mapping>
</web-app>